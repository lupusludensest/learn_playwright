{
  "name": "learnplaywright",
  "version": "1.0.0",
  "description": "A Playwright test automation project with various test examples and interactive components",
  "main": "index.js",  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test --grep \"@smoke\"",
    "test:regression": "playwright test --grep \"@regression\"",
    "test:all": "npm run test:smoke && npm run test:regression",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "codegen": "playwright codegen",
    "install:browsers": "playwright install",
    "mcp": "npx @playwright/mcp"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "e2e",
    "ui-testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/mcp": "0.0.13",
    "@playwright/test": "1.51.1",
    "@types/node": "^20.11.20"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
